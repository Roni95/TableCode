<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:foreground="?android:attr/selectableItemBackground">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <View
                android:layout_height="2dip"
                android:background="#090B0B" />

            <TableRow>

                <TextView
                    android:layout_width="101dp"
                    android:layout_height="match_parent"
                    android:padding="3dip"
                    android:text="Warrant Id : "
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/wserialno"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="3dip"
                    android:text="695"
                    android:textSize="14dp" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    android:layout_width="101dp"
                    android:layout_height="match_parent"
                    android:padding="3dip"
                    android:text="Reference :"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/wreference"
                    android:layout_width=" "
                    android:layout_height="match_parent"
                    android:padding="3dip"
                    android:text="CR-420 155A" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    android:layout_width="101dp"
                    android:layout_height="match_parent"
                    android:padding="3dip"
                    android:text="Name :"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/wname"
                    android:layout_width=" "
                    android:layout_height="match_parent"
                    android:padding="3dip"
                    android:text="Md. Abid Hasan Roni Bokshi" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    android:layout_width="101dp"
                    android:layout_height="match_parent"
                    android:padding="3dip"
                    android:text="Fathers Name :"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/wfather"
                    android:layout_width=" "
                    android:layout_height="match_parent"
                    android:padding="3dip"
                    android:text="Md. Abdul Goni Bakshi " />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    android:layout_width="101dp"
                    android:layout_height="match_parent"
                    android:padding="3dip"
                    android:text="Adress : "
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/waddress"
                    android:layout_width=" "
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="Nazimkhan (5611), Rajarhat, Kurigram, Rangpur, Dhaka, Bangladesh" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#070606" />
        </TableLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
